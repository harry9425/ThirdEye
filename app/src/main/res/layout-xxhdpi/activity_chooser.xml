<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#FDD835"
    tools:context=".chooser">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="557dp"
        android:layout_height="856dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bkl22" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="142dp"
        android:layout_height="158dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="gpsproblemsstart"
        android:shadowColor="#3B3D4C"
        android:text="PRESS FOR GPS TRACKING"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#00F40B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.334" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="135dp"
        android:layout_height="133dp"
        android:background="#00B5A5A5"
        android:backgroundTint="#955454"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="gpsproblemsstart2"
        android:text="PRESS FOR LOCATING VEHICLES"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.776"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView55"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:background="#FFB300"
        android:backgroundTint="#0043A047"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="gpsproblemsstart3"
        android:text="PRESS FOR  PEOPLE'S ADDRESS BOOK"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.513" />

    <ImageView
        android:id="@+id/imageView42"
        android:layout_width="279dp"
        android:layout_height="83dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner" />

    <ImageView
        android:id="@+id/imageView43"
        android:layout_width="206dp"
        android:layout_height="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView55"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView55"
        app:layout_constraintTop_toBottomOf="@+id/textView55"
        app:layout_constraintVertical_bias="0.436"
        app:srcCompat="@drawable/firebase" />

    <Button
        android:id="@+id/signout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#F1C400"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="proceed"
        android:text="SIGN OUT"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView43"
        app:layout_constraintEnd_toEndOf="@+id/textView55"
        app:layout_constraintStart_toEndOf="@+id/imageView43"
        app:layout_constraintTop_toTopOf="@+id/imageView43" />


</androidx.constraintlayout.widget.ConstraintLayout>